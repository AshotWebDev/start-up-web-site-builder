{
  "info": {
    "name": "Django JWT Auth API (Auto Tokens)",
    "_postman_id": "abcdef12-3456-7890-abcd-1234567890ab",
    "description": "Коллекция для тестирования регистрации, авторизации и профиля пользователей с автоматическим сохранением токенов",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "ACCESS_TOKEN",
      "value": ""
    },
    {
      "key": "REFRESH_TOKEN",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"first_name\": \"Ivan\",\n  \"last_name\": \"Petrov\",\n  \"password\": \"mypassword123\",\n  \"tariff_plan\": null\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/v1/auth/register/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api","v1","auth","register"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    let data = pm.response.json();",
              "    pm.collectionVariables.set('ACCESS_TOKEN', data.tokens.access);",
              "    pm.collectionVariables.set('REFRESH_TOKEN', data.tokens.refresh);",
              "    console.log('Access и Refresh токены сохранены');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"mypassword123\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/v1/auth/login/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api","v1","auth","login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    let data = pm.response.json();",
              "    pm.collectionVariables.set('ACCESS_TOKEN', data.access);",
              "    pm.collectionVariables.set('REFRESH_TOKEN', data.refresh);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh\": \"{{REFRESH_TOKEN}}\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/v1/auth/refresh/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api","v1","auth","refresh"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    let data = pm.response.json();",
              "    pm.collectionVariables.set('ACCESS_TOKEN', data.access);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/api/v1/auth/me/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api","v1","auth","me"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (pm.collectionVariables.get('ACCESS_TOKEN')) {",
              "    pm.request.headers.upsert({",
              "        key: 'Authorization',",
              "        value: 'Bearer ' + pm.collectionVariables.get('ACCESS_TOKEN')",
              "    });",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Profile",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name\": \"Иван\",\n  \"last_name\": \"Петров\",\n  \"tariff_plan\": 2\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/v1/auth/me/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api","v1","auth","me"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (pm.collectionVariables.get('ACCESS_TOKEN')) {",
              "    pm.request.headers.upsert({",
              "        key: 'Authorization',",
              "        value: 'Bearer ' + pm.collectionVariables.get('ACCESS_TOKEN')",
              "    });",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Change Password",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"old_password\": \"mypassword123\",\n  \"new_password\": \"newsecurepassword456\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/v1/auth/me/password/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api","v1","auth","me","password"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (pm.collectionVariables.get('ACCESS_TOKEN')) {",
              "    pm.request.headers.upsert({",
              "        key: 'Authorization',",
              "        value: 'Bearer ' + pm.collectionVariables.get('ACCESS_TOKEN')",
              "    });",
              "}"
            ]
          }
        }
      ]
    }
  ]
}
